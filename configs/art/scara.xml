<?xml version='1.0' encoding='UTF-8'?>
<pyvcp>
  <hbox>
    <relief>RIDGE</relief>
    <bd>2</bd>
    <!-- the ALARM Led -->
    <vbox>
      <led>
        <halpin>"alarm"</halpin>
        <size>"90"</size>
        <on_color>"red"</on_color>
        <off_color>"gray"</off_color>
      </led>
      <label>
      <text>"ALM"</text>
      <font>("Helvetica",12)</font>
      </label>
    </vbox>
    <!-- the SERVO_READY Led -->
    <vbox>
      <led>
        <halpin>"servo_ready"</halpin>
